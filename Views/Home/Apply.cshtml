@{
    ViewBag.Title = "Home Page";
}
<!--don't forget to use model control thingy'-->
@using u21478377_H.W04.Models
@model List<KISMET>

<style>
    .left {
        text-align: left;
    }

    .right {
        text-align: right;
    }

    .header {
        text-align: center;
    }

    .apply {
        text-align: center;
    }

    .* {
        background-image: url("https://i.pinimg.com/736x/46/0e/89/460e89249119b5d1f56bc005cc3f32c1.jpg") /*rainbow background*/
    }
</style>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2 class="header">Apply</h2>
    <br />

    <h4>Name</h4>
    <input type="text" placeholder="Name" value="Name" id="Name" />
    <br />
    <h4>Surname</h4>
        <input type="text" placeholder="Surname" value="Surname" id="Surname" />
<br />
<h4>Email Address</h4>
<input type="text" placeholder="Email address" value="email" id="email" />
<br />
<h4>Cellphone number</h4>
<input type="Number" placeholder="011 111 1111" value="cell" id="email" />
<br />
<h4>Upload a copy of your ID</h4>
<input type="file" name="file" />
<table>
    <thead>
    <th>File Uploaded</th>
    </thead>
</table>
<!--show file if uploaded-->
@foreach (KISMET file in Model)
{
    <tr>
        <td>@file.FileName</td>
        <td>@Html.ActionLink("DELETE", "DeleteFile", new { fileName = file.FileName }, new { @class = "btn btn-danger btn-sm" })</td>
    </tr>
}

<h1 class="header">Program</h1>
<br />
<h2 class="left">Highest schooling qualification</h2>
<input type="text" placeholder="eg:High School (Grade 10)" class="right" />
<br />

<h2 class="left"> Qualification applying for</h2>
<select id="qualification" name="qualification" class="right">
    <option value="High School (Grade 10)">High School (Grade 10)</option>
    <option value="High School (Grade 11)">High School (Grade 11)</option>
    <option value="High School (Grade 12)">High School (Grade 12)</option>
    <option value="Bachelor">Bachelor</option>
    <option value="Honours">Honours</option>
    <option value="Masters">Masters</option>
    <option value="Doctorate">Doctorate</option>
</select>
<br />

<h2 class="left">Qualification field</h2>
<select id="qualificationfield" name="qualificationfield" class="right">
    <option value="Agriculture">Agriculture</option>
    <option value="Arts">Arts</option>
    <option value="Business">Business</option>
    <option value="Education">Education</option>
    <option value="Digital design">Digital design</option>
    <option value="Law">Law</option>
    <option value="Pyschology">Pyschology</option>
    <option value="Veterinary sciences">Veterinary sciences</option>
</select>
<br />

<h2 class="left">Full time /Part time</h2>
<select id="time" name="time" class="right">
    <option value="Full time">Full time</option>
    <option value="Part time">Part time</option>
</select>
<br />

<h2 class="left">Starting year</h2>
<input type="number" maxlength="4" placeholder="YYYY" value="year" class="right" id="year" />
<br />

<h2 class="left">Province</h2>
<select id="provinces" name="provinces" class="right">
    <option value="Gauteng">Gauteng</option>
    <option value="Northern Cape">Northern Cape</option>
    <option value="Western Cape">Western Cape</option>
    <option value="Eastern Cape">Eastern Cape</option>
    <option value="Free State">Free State</option>
    <option value="Kwa-Zulu Natal">Kwa-Zulu Natal</option>
    <option value="North West">North West</option>
    <option value="Limpopo">Limpopo</option>
    <option value="Mpumalanga">Mpumalanga</option>
</select>
<br />
<br />
<br />

<input type="button" value="apply" placeholder="Apply" class="apply" />
}


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
